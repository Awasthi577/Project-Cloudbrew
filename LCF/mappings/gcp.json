{
  "bucket": {
    "provider": "gcp",
    "type": "google_storage_bucket",
    "required": ["name", "location"],
    "defaults": {
      "location": "US",
      "force_destroy": true
    }
  },
  "vm": {
    "provider": "gcp",
    "type": "google_compute_instance",
    "required": ["name", "machine_type", "zone"],
    "defaults": {
      "machine_type": "e2-medium",
      "zone": "us-central1-a",
      "boot_disk": {
        "initialize_params": {
          "image": "debian-cloud/debian-11"
        }
      },
      "network_interface": {
        "network": "default",
        "access_config": {}
      },
      "labels": {
        "environment": "dev",
        "managed_by": "cloudbrew"
      },
      "tags": {
        "Environment": "Dev"
      }
    }
  }
}